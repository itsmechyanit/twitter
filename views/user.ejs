<%- include('partials/header'); %> <%- include('partials/sidebar'); %>
<main class="pt-5">
  <div class="row">
    <div class="col-12 col-lg-6">
      <div class="main-content m-lg-auto">
        <div class="d-flex mb-4 gap-2 align-items-center">
          <img
            class="main-profile-image"
            src="/img/users/<%= searchedUser.photo %>"
          />
          <div class="d-flex flex-column">
            <span class="fw-bold" style="font-size: 1.25rem"
              ><%= searchedUser.name %></span
            >
            <span class="text-secondary" style="font-size: 1.25rem"
              >@<%= searchedUser.username %></span
            >
          </div>
          <a
            href="/follows/<%= searchedUser.id %>"
            class="btn rounded-5 ms-auto fw-bold"
            style="
              background: rgb(239, 243, 244);
              color: rgb(15, 20, 25);
              font-size: 1.25rem;
            "
            id="user-follow"
            ><% if(followedByLoggedInUser) { %> Unfollow <%} else {%> Follow <%
            } %>
          </a>
        </div>
        <div class="d-flex mb-4 gap-4 align-items-center">
          <p>
            <%= numFollowings %> <span class="text-secondary">Following</span>
          </p>
          <p>
            <%= numFollowers %> <span class="text-secondary">Followers</span>
          </p>
        </div>
        <h1 class="text-center mb-3 fw-bold" style="font-size: 1.5rem">
          All Tweets by <%= searchedUser.name %>
        </h1>
        <% tweets.forEach((tweet, index)=> { %> <%- include('tweet', {tweet,
        likedByLoggedInUser:tweetsLikedByLoggedInUser[index],
        numComments:numCommentsOnEachTweet[index]}); %> <%} )%>
      </div>
    </div>
    <div class="col-12 d-none d-lg-block col-lg-6">
      <%- include('partials/sideContent'); %>
    </div>
  </div>
</main>
<%- include('partials/footer'); %>
