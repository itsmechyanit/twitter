<%- include('partials/header'); %>
<div class="index-container">
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-md-auto anta-regular">
        <h1>
          <i class="fa-solid fa-x"></i>
          <span>Twitter</span>
        </h1>
      </div>
    </div>
    <div class="row justify-content-center poppins-regular">
      <div class="col-md-auto">
        <h5>Sign Up</h5>
      </div>
    </div>
    <form class="row g-3 justify-content-center" id="registration-form">
      <div class="col-10 col-md-7 d-flex flex-column align-items-start">
        <label for="inputName" class="form-label">
          <i class="fa-solid fa-user"></i> Name
        </label>
        <input
          type="text"
          name="name"
          class="form-control"
          id="inputName"
          required
        />
      </div>
      <div class="col-10 col-md-7 d-flex flex-column align-items-start">
        <label for="inputEmail" class="form-label"
          ><i class="fa-solid fa-envelope"></i> Email
        </label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="inputEmail"
          required
        />
      </div>
      <div class="col-10 col-md-7 d-flex flex-column align-items-start">
        <label for="inputUserName" class="form-label">
          <i class="fa-solid fa-user"></i> username
        </label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="inputUserName"
          required
        />
      </div>
      <div class="col-10 col-md-7 d-flex flex-column align-items-start">
        <label for="userPhoto" class="form-label"
          ><i class="fa-solid fa-user"></i> Choose Your Profile Picture</label
        >
        <input class="form-control" name="photo" type="file" id="userPhoto" />
      </div>
      <div class="col-10 col-md-7 d-flex flex-column align-items-start">
        <label for="inputPassword" class="form-label">
          <i class="fa-solid fa-lock"></i> Password</label
        >
        <input
          type="password"
          name="password"
          class="form-control"
          id="inputPassword"
          required
          minlength="8"
        />
      </div>
      <div class="col-10 col-md-7 d-flex flex-column align-items-start">
        <label for="inputConfirmPassword" class="form-label">
          <i class="fa-solid fa-lock"></i> Confirm Your Password</label
        >
        <input
          type="password"
          name="passwordConfirm"
          class="form-control"
          id="inputConfirmPassword"
          required
        />
      </div>
      <div class="col-10 col-md-7 d-flex justify-content-end">
        <button type="submit" class="btn text-bg-primary">Register</button>
      </div>
    </form>
    <p class="mt-4">
      <a href="/login" style="text-decoration: none" class="text-white">
        Already a user? click here to login
      </a>
    </p>
  </div>
</div>
<%- include('partials/footer'); %>
